        <KickMessage>Aufnehmen ist verboten!</KickMessage>
        <Permitted/>
        <Denied/>
    </Record>
    
    <Sticky Enabled="false" LogEnabled="false">
        <Channel>0</Channel>
        <StickTime>60</StickTime>
        <Permitted/>
        <Denied/>
    </Sticky>
    
    <TeamSpeak>
